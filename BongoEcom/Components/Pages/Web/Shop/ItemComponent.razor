@rendermode InteractiveServer

@using Application.Features.Products.DTOs

@inject CartService cartService
@inject SweetAlertService SAlert

<div class="card h-100">
    <NavLink class="text-decoration-none text-dark" href="@($"/products/{Product.Id}/details")">
        <div class="card-img-container">
            <!-- NEW -->
            <img class="card-img-top product-img" src="@Product.FeatureImageUrl" alt="@Product.Name" />
        </div>

        <div class="card-body">
            <h5 class="card-title">@Product.Name</h5>
            <div class="d-flex justify-content-between align-items-center mb-2">
                <span class="text-muted">@Product.CategoryName</span>
                @if(Product.Discount>0){
                    <span class="badge bg-danger">-@Product.Discount %</span>
                }
            </div>
            <div class="price-section">
                <div class="price">
                    <span class="current-price">Tk @Product.SalePrice</span>
                    @if(Product.RegularPrice > Product.SalePrice)
                    {
                        <span class="original-price">Tk @Product.RegularPrice</span>
                    }
                </div>
            </div>
        </div>
    </NavLink>

    <div class="card-footer bg-transparent">
        <button @onclick="@AddToCart" class="btn btn-warning w-100">ADD TO CART</button>
    </div>
</div>


@code
{
    [Parameter]
    public required ProductDto Product { get; set; } = new();

    private async void AddToCart()
    {
        var added = await cartService.AddProduct(Product);
    }
}
