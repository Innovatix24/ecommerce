@page "/admin/attributes/create";
@using Application.Features.Attributes.Commands
@rendermode InteractiveServer

<FluentCard>

    <h3>Create Attribute</h3>

    <EditForm Model="@Command" OnValidSubmit="HandleValidSubmit">
        <DataAnnotationsValidator />
        <ValidationSummary />

        <div class="mb-3">
            <label for="name" class="form-label">Name</label>
            <InputText id="name" class="form-control" @bind-Value="Command.Name" />
        </div>

        <button class="btn btn-primary" type="submit">Create</button>
        <button class="btn btn-secondary ms-2" type="button" @onclick="@(() => Navigation.NavigateTo("/admin/attributes"))">Cancel</button>

        @if (!string.IsNullOrEmpty(Message))
        {
            <div class="alert alert-info mt-3">@Message</div>
        }
    </EditForm>
</FluentCard>

@code {
    private CreateAttributeCommand Command = new();
    private string Message = string.Empty;

    private async Task HandleValidSubmit()
    {
        var result = await _mediator.Send(Command);

        if (result.IsSuccess)
        {
            Message = "Attribute created successfully!";
            Navigation.NavigateTo("admin/attributes");
        }
        else
        {
            Message = result.Error ?? "Failed to create Attribute.";
        }
    }
}
