@using BongoEcom.Components.Account.Shared

<CascadingAuthenticationState>
    <Router AppAssembly="@typeof(Program).Assembly">
        <Found Context="routeData">
            <AuthorizeRouteView RouteData="@routeData" DefaultLayout="@SelectLayout(routeData)">
                <NotAuthorized>
                    <RedirectToLogin />
                </NotAuthorized>
            </AuthorizeRouteView>
        </Found>
        <NotFound>
            <LayoutView Layout="@typeof(Layout.MainLayout)">
                <p>Sorry, there's nothing at this address.</p>
            </LayoutView>
        </NotFound>
    </Router>
</CascadingAuthenticationState>

@code {
    private Type SelectLayout(RouteData routeData)
    {
        var path = routeData.PageType.FullName;
        if (path == null) 
            return typeof(Layout.Web.WebLayout);

        if (path.Contains("Pages.Admin"))
            return typeof(Layout.Admin.AdminLayout);

        if (path.Contains("Pages.Customer"))
            return typeof(Layout.Web.WebLayout);

        return typeof(Layout.Web.WebLayout);
    }
}



