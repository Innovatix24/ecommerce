@using Microsoft.FluentUI.AspNetCore.Components
@using Application.Auth.Commands
@using Microsoft.AspNetCore.Components.Authorization

@inherits LayoutComponentBase

@inject NavigationManager Navigation
@inject AuthenticationStateProvider AuthStateProvider

<FluentLayout>
    <FluentStack Class="main" Style="column-gap:0;" Orientation="Orientation.Horizontal" Width="100%">
        <NavMenu />
        <FluentBodyContent Style="height:100vh !important; background:#eaecee; margin:0 !important;">
            <AdminHeaderComponent/>
            <div style="height:calc(100vh - 45px); padding:16px;">
                @Body
            </div>
            <FluentDialogProvider/>
            <FluentToastProvider />
            <FluentTooltipProvider />
        </FluentBodyContent>
    </FluentStack>
</FluentLayout>
